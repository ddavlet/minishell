{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
        {
            "name": "(gdb) exec_debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/execution/debug",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
				{
					"description": "follow-fork-mode child",
					"text": "set follow-fork-mode child",
					"ignoreFailures": false
				},
				{
					"description": "breakpoint child_process",
					"text": "b child_process",
					"ignoreFailures": false
				},
				{
					"description": "breakpoint handle_here_document",
					"text": "b handle_here_document",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "wildcard_debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/wildcard.out",
			"args": ["file1", "file2", "test1", "\*st", "te\*", "te\*t"],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"preLaunchTask": "Wildcard",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		}
	]
}
